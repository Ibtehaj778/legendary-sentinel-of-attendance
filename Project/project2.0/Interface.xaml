                    <Label FontSize="20px" Content="Specilaization: " FontFamily="Consolas" FontWeight="Bold" HorizontalAlignment="Left" Margin="205,201,0,0" VerticalAlignment="Top"/>
                </Grid>
                <Grid>
                    <Label FontSize="20px" Content="Babar Azam" FontFamily="Consolas" FontWeight="ExtraLight" HorizontalAlignment="Left" Margin="421,53,0,0" VerticalAlignment="Top"/>
                    <Label FontSize="20px" Content="Muhammad Azam" FontFamily="Consolas" FontWeight="ExtraLight" HorizontalAlignment="Left" Margin="422,90,0,0" VerticalAlignment="Top"/>
