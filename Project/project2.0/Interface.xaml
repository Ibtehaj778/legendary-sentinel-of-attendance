                    <Label FontSize="20px" Content="Male" FontFamily="Consolas" FontWeight="ExtraLight" HorizontalAlignment="Left" Margin="421,333,0,0" VerticalAlignment="Top"/>
                    <Label FontSize="20px" Content="t565656@lhr.nu.edu.pk" FontFamily="Consolas" FontWeight="ExtraLight" HorizontalAlignment="Left" Margin="421,370,0,0" VerticalAlignment="Top"/>
                    <Label FontSize="20px" Content="+92-331-2345678" FontFamily="Consolas" FontWeight="ExtraLight" HorizontalAlignment="Left" Margin="422,407,0,0" VerticalAlignment="Top"/>
                </Grid>
            </Grid>


        </Grid>



    </Grid>
</Page>

    
