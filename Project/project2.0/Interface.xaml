                    <Label FontSize="20px" Content="Supervisor" FontFamily="Consolas" FontWeight="ExtraLight" HorizontalAlignment="Left" Margin="421,164,0,0" VerticalAlignment="Top"/>
                    <Label FontSize="20px" Content="Data Science" FontFamily="Consolas" FontWeight="ExtraLight" HorizontalAlignment="Left" Margin="421,201,0,0" VerticalAlignment="Top"/>
                </Grid>
            </Grid>
            <Grid>
                <Rectangle Fill="#FFFF" Margin="183,245,46,28" RadiusX="15" RadiusY="15"/>
                <Grid>
                    <Label FontSize="20px" Content="Campus: " FontFamily="Consolas" FontWeight="Bold" HorizontalAlignment="Left" Margin="205,259,0,0" VerticalAlignment="Top"/>
                    <Label FontSize="20px" Content="Sections(s): " FontFamily="Consolas" FontWeight="Bold" HorizontalAlignment="Left" Margin="205,296,0,0" VerticalAlignment="Top"/>
                    <Label FontSize="20px" Content="Gender: " FontFamily="Consolas" FontWeight="Bold" HorizontalAlignment="Left" Margin="205,333,0,0" VerticalAlignment="Top"/>
