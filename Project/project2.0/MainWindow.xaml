<Window x:Class="project2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Grid Background="LightGray">
        <Grid Height="210" VerticalAlignment="Top">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF00537F"/>
                    <GradientStop Color="#FF99B947" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Image Source="/Images/icons8-enter-50.png" 
                   Height="75" Width="70" Margin="305,42,295,90"/>
            <Label Height="40" Margin="310,135,290,35"
                   FontSize="20"
                   HorizontalContentAlignment="Center"
                   Foreground="White"
                   FontWeight="Bold"
                   FontFamily="ARIAL">ADMIN</Label>
        </Grid>
        <Grid x:Name="SECONDHALF" 
              Height="270" 
              VerticalAlignment="Bottom"
              Background="#FF07B1EA">
            <Image Source="/Images/Screenshot 2024-03-09 at 9.52.50 PM.png" Stretch="Fill" />

            <Border Height="40" 
                    Padding="5" 
                    BorderThickness="1"  
                    Background="White" 
                    CornerRadius="10" 
                    Margin="310,20,275,210">
                <TextBox HorizontalAlignment="Center"  
                           VerticalAlignment="Top"
                           Width="150"
                            Height="35"
                         FontFamily="Arial"
                         FontSize="15"
                         BorderThickness="0"
                           x:Name="USERNAME"
                         Margin="0,4,0,0"
                         />
            </Border>
            <Border Height="40" 
                    Padding="5" 
                    BorderThickness="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Margin="310,78,275,152">
                <TextBox HorizontalAlignment="Center" 
                           VerticalAlignment="Top"
                           Width="150"
                           Height="35"
                         FontFamily="Arial"
                         FontSize="15"
                         BorderThickness="0"
                           x:Name="PASSWORD"
                             Margin="0,4,0,0"
                             />
            </Border>
            <Button Width="100"
                    Height="50" 
                    Margin="310,125,290,75"
                    Content="LOGIN"
                    Foreground="White"
                    BorderBrush="Black"
                    FontSize="18"
                    FontFamily="ARIAL"
                    Click="Button_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2D89AF" Offset="1"/>
                        <GradientStop Color="#FF7DB919" Offset="0.296"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>
</Window>
